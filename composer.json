{
    "name": "firehed/api",
    "description": "An API framework",
    "require": {
        "php": "^7.4 || ^8.0",
        "composer/composer": "^2.1",
        "firehed/input": "^2.1.5",
        "psr/container": "^1.0 || ^2.0",
        "psr/http-message": "^2.0",
        "psr/http-server-handler": "^1.0",
        "psr/http-server-middleware": "^1.0",
        "psr/log": "^1.0",
        "symfony/console": "^3.2 || ^4 || ^5"
    },
    "suggest": {
        "firehed/inputobjects": "Pre-made Input components for validation"
    },
    "bin": [
        "bin/api",
        "bin/generate_endpoint",
        "bin/generate_front_controller"
    ],
    "config": {
      "sort-packages": true
    },
    "extra": {
      "branch-alias": {
        "dev-master": "4.0-dev"
      }
    },
    "require-dev": {
        "nyholm/psr7": "^1.3",
        "phpstan/phpstan": "^0.12",
        "phpstan/phpstan-phpunit": "^0.12",
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "^3.3.1"
    },
    "autoload": {
        "psr-4": {
            "Firehed\\API\\": ["src/"]
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Firehed\\API\\": ["tests/"]
        }
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Eric Stern",
            "email": "eric@ericstern.com"
        }
    ],
    "scripts": {
      "test": [
        "@phpunit",
        "@phpstan",
        "@phpcs"
      ],
      "autofix": "phpcbf src tests",
      "phpunit": "phpunit",
      "phpstan": "phpstan analyse --no-progress .",
      "phpcs": "phpcs src tests"
    }
}
