{
    "name": "firehed/api",
    "require": {
        "firehed/common": "^1.0",
        "firehed/input": "^2.0",
        "psr/http-message": "^1.0",
        "php": ">=7",
        "zendframework/zend-diactoros": "^1.3",
        "psr/container": "^1.0"
    },
    "suggest": {
        "firehed/inputobjects": "Pre-made Input components for validation"
    },
    "bin": [
        "bin/generate_endpoint_list",
        "bin/generate_front_controller"
    ],
    "require-dev": {
        "phpunit/phpunit": "^5.0 | ^6.0",
        "firehed/arctools": "^1.0",
        "phpstan/phpstan": "^0.8.5",
        "squizlabs/php_codesniffer": "^3.1"
    },
    "autoload": {
        "psr-4": {
            "Firehed\\API\\": ["src/"]
        },
        "files": [
            "src/renderResponse.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Firehed\\API\\": ["tests/"]
        }
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Eric Stern",
            "email": "eric@ericstern.com"
        }
    ],
    "scripts": {
      "test": [
        "@phpunit",
        "@phpstan",
        "@phpcs"
      ],
      "autofix": "phpcbf src tests",
      "phpunit": "phpunit",
      "phpstan": "phpstan analyse -q -l4 src",
      "phpcs": "phpcs src"
    }
}
